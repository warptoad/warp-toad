{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2022",
    "module": "Node18",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./*"
      ]
    }
  },
  "include": [
    "/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "target"
  ]
}