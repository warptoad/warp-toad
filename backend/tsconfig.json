{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowJs": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": [".//*"]
    }
  },
  "include": ["/**/*"],
  "exclude": ["node_modules", "dist"]
}